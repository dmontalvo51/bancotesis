<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pe.edu.unmsm.integracion.LoginMapper">

	<resultMap type="pe.edu.unmsm.modelo.Usuario" id="Usuario">
		<result property="id" column="USU_ID"/>
		<result property="tipo" column="TUSU_ID"/>
		<result property="cuenta" column="USU_CODIGO"/>
		<result property="fecha" column="USU_FECHAREGISTRO" />
		
	</resultMap>
	
	
	<select id="iniciarSesion"  resultMap="Usuario" parameterType="java.util.Map">
		select USU_ID, TUSU_ID, USU_CODIGO, USU_FECHAREGISTRO  from usuario
        where usu_codigo=#{cuenta} and USU_PASSWORD=#{pass}
	</select>

</mapper>