<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pe.edu.unmsm.integracion.dao.LevantarObservacionesMapper">


	<resultMap type="pe.edu.unmsm.negocio.modelo.BorradorTesis" id="BorradorTesis">
		
		<result property="titulo" column="FT_TITULO" />
		<result property="nomBachiller" column="NOMBRE_COMPLETO" />
		<result property="lineaInvestigacion" column="LINEA_DESCRIPCION" />
		<result property="nombreAsesor" column="DOCEN_CODIGO" />

	</resultMap>

	<parameterMap type="pe.edu.unmsm.negocio.modelo.Ficha" id="FichaTesis" />


	<select id="cargarDato" resultMap="BorradorTesis">
		select f.ft_titulo,concat(u.usu_apellidos,',',u.usu_nombres) as nombre_completo
		,l.linea_descripcion,f.docen_codigo
		from ficha_tesis f,linea_investigacion l,borrador_tesis b,usuario u
		where (b.tes_codigo=f.tes_codigo) and (f.linea_id=l.linea_id) 
	</select>
	

</mapper>