<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pe.edu.unmsm.integracion.LoginMapper">

	<resultMap type="pe.edu.unmsm.modelo.Usuario" id="Usuario">
		<result property="tipo" column="TUSU_ID" />
		<result property="cuenta" column="USU_CUENTA" />
		<result property="fecha" column="USU_FECHAREGISTRO" />
		<result property="correo" column="USU_CORREO" />
		<result property="nombres" column="USU_NOMBRES" />
		<result property="apellidos" column="USU_APELLIDOS" />
		<result property="perfil" column="PER_DESCRIPCION" />
		

	</resultMap>


	<select id="iniciarSesion" resultMap="Usuario" parameterType="java.util.Map">
		select usu.TUSU_ID, usu.USU_CUENTA, usu.USU_FECHAREGISTRO, usu.USU_NOMBRES
		from TESIS.USUARIO usu
		WHERE usu.usu_cuenta=#{cuenta} and usu.USU_PASSWORD=#{pass}
	</select>

</mapper>